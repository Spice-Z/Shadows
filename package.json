{
  "name": "shadows-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Shadows monorepo - Mobile app and backend services",
  "scripts": {
    "mobile": "pnpm --filter mobile",
    "mobile:start": "pnpm --filter mobile start",
    "mobile:ios": "pnpm --filter mobile ios",
    "mobile:android": "pnpm --filter mobile android",
    "mobile:web": "pnpm --filter mobile web",
    "mobile:lint": "pnpm --filter mobile lint",
    "install:all": "pnpm install",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "typecheck": "pnpm -r exec pnpm typecheck",
    "lint": "pnpm -r exec pnpm lint"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

